{
  "name": "pubdev-platform",
  "version": "1.0.0",
  "description": "AI-powered publisher development automation platform with dual-workflow architecture",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run ws\" \"next dev\"",
    "dev:next": "next dev",
    "dev:ws": "tsx src/lib/websocket/init.ts",
    "ws": "tsx src/lib/websocket/init.ts",
    "build": "next build",
    "start": "concurrently \"npm run ws\" \"next start\"",
    "start:next": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:seed": "supabase db seed",
    "claude:start": "claude-code start",
    "claude:generate": "claude-code generate",
    "claude:test": "claude-code test",
    "claude:deploy": "claude-code deploy",
    "agents:test": "npm run test -- src/sub-agents",
    "context7:build": "context7 build",
    "context7:dev": "context7 dev"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "@supabase/auth-helpers-nextjs": "^0.8.0",
    "next-auth": "^4.24.0",
    "zustand": "^4.4.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "framer-motion": "^10.16.0",
    "react-router-dom": "^6.0.0",
    "react-hook-form": "^7.47.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0",
    "date-fns": "^2.30.0",
    "axios": "^1.5.0",
    "ws": "^8.14.0",
    "@types/ws": "^8.5.0",
    "express": "^4.18.0",
    "@types/express": "^4.17.0",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.0",
    "dotenv": "^16.3.0",
    "winston": "^3.11.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@playwright/test": "^1.39.0",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "supabase": "^1.110.0",
    "context7": "^1.0.0"
  },
  "keywords": [
    "publisher-development",
    "automation",
    "ai-agents", 
    "mcp-integration",
    "team-collaboration",
    "supabase",
    "nextjs",
    "typescript"
  ],
  "author": "Streets Digital",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "claude": {
    "archon_v2": true,
    "sub_agents": true,
    "mcp_integration": true,
    "documentation": "context7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
